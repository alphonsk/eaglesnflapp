<p id="notice"><%= notice %></p>

<h1>Teams</h1> 
<br>
<%= link_to 'New Team', new_team_path %>
<br>
<br>

<table>
  <thead>
    <tr>
      <th>Name</th> 
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td> 
        <td><%= link_to 'Show', team_path(team.name) %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team_path(team), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
   
</table>

 

 

 