<div class="main">
    <div class="showHeader"> 
        <% @teams.each do |nflteam| %>
        <table style="width:100%">
            <% if nflteam.name == @team_name%>
            <tr> 
                <th rowspan="2" class="showAvatar">
                    <%= image_tag(nflteam.avatar, style:" width:50px" )%>
                </th>
                <th colspan="2" class="showName">
                    <%= @team_name %>
                </th>
                <td rowspan="2" class="showFollowAdd" >
                 ++
                </td>
            </tr>
            <tr>
                <td class="showScore">
                    4 - 0
                </td>
                <td rowspan="2" class="showFollowers">
                     20000
                </td> 
            </tr>
            <% end %>
        </table>
        <% end %>
    </div>
</div>




 
<%= form_with model: [@team, @post] do |f| %> 
    <%= f.text_field :post  %>
    <%= f.hidden_field :team_id, :value => @team_id %>
    <%= f.hidden_field :user_id, :value => @user_id %>
    <%=f.submit "post"   %> 
<% end %>

<div id="comment_div">  
    <% @posts.each do |post| %>
        <%= post.post%>  <%= post.user_id%> <%= post.team_id%>
        <br>

        <%  %>
         <% post.comments.each do |c| %>
            <%= c.comment %>
            <br> 
        <% end %>

 
        <%  %>
        <%= form_with model:  @comment do |f| %> 
            <%= f.text_field :comment  %>
            <%= f.hidden_field :post_id, :value => post.id %>
            <%= f.hidden_field :user_id, :value => @user_id %>
            <%=f.submit "reply"   %> 
        <% end %>
        
         

    <% end %> 
     
   
</div>
 

  